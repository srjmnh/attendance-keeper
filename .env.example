# Flask configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
DEBUG=True
HOST=0.0.0.0
PORT=5000
VERSION=1.0.0

# AWS Rekognition configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_COLLECTION_ID=students
AWS_FACE_MATCH_THRESHOLD=90.0
AWS_MAX_FACES=10
AWS_QUALITY_FILTER=AUTO

# Firebase configuration
FIREBASE_ADMIN_CREDENTIALS_BASE64=your-base64-encoded-credentials

# Gemini AI configuration
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=models/gemini-1.5-flash
GEMINI_MAX_MEMORY=20
GEMINI_TEMPERATURE=0.7
GEMINI_TOP_P=0.8
GEMINI_TOP_K=40

# Image processing configuration
IMAGE_MAX_SIZE=1920
IMAGE_QUALITY=95
IMAGE_BRIGHTNESS=1.2
IMAGE_CONTRAST=1.1
IMAGE_SHARPNESS=1.2

# Face detection configuration
FACE_MIN_QUALITY=80.0
FACE_MIN_CONFIDENCE=90.0
FACE_MIN_SIZE=80

# Authentication configuration
AUTH_TOKEN_EXPIRY_DAYS=1
AUTH_RESET_TOKEN_EXPIRY_HOURS=24
AUTH_MAX_ATTEMPTS=5
AUTH_LOCKOUT_MINUTES=30

# Database configuration
DB_COLLECTION_USERS=users
DB_COLLECTION_SUBJECTS=subjects
DB_COLLECTION_ATTENDANCE=attendance
DB_COLLECTION_CONVERSATIONS=conversations

# Pagination configuration
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=100

# Logging configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# CORS configuration
CORS_ORIGINS=*
CORS_MAX_AGE=3600

# Rate limiting configuration
RATELIMIT_DEFAULT=100 per minute
RATELIMIT_STORAGE_URL=memory://

# Session configuration
SESSION_TYPE=filesystem
SESSION_FILE_DIR=/tmp/flask_session
SESSION_FILE_THRESHOLD=500
SESSION_FILE_MODE=384
SESSION_LIFETIME_DAYS=31

# Email configuration (for password reset)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Upload configuration
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_PATH=uploads

# Cache configuration
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX=attendance_

# Celery configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Redis configuration
REDIS_URL=redis://localhost:6379/0 